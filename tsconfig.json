{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "paths": {
      "*": ["./node_modules/*", "./types/*"]
    }
  },
  "include": ["./**/*.ts"],
  "exclude": ["./node_modules"]
}
